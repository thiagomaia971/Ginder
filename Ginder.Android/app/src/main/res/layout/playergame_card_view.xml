<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="profile"
            type="br.unifor.dispositivos.ginder.ui.search.PlayerGamer" />
    </data>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="380dp"
        android:layout_height="380dp"
        android:layout_margin="12dp"
        android:elevation="12dp"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/image_view_profile_pic"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_launcher_background"
                android:layout_alignParentLeft="true" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:background="@android:color/white"
                android:orientation="vertical"
                android:padding="12dp">

                <TextView
                    android:id="@+id/playergamer_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@{`Miles Away`}"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:text="5 Miles Away" />

                <TextView
                    android:id="@+id/playergamer_game"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@{`Miles Away`}"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:text="5 Miles Away" />

                <TextView
                    android:id="@+id/playergamer_period"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@{`Miles Away`}"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:text="5 Miles Away" />
                <TextView
                    android:id="@+id/playergamer_role"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@{`Miles Away`}"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:text="5 Miles Away" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="sans-serif-light"
                    android:text="@{`Miles Away`}"
                    android:textColor="@android:color/black"
                    android:textSize="16sp"
                    tools:text="5 Miles Away" />

            </LinearLayout>

        </RelativeLayout>


    </androidx.cardview.widget.CardView>
</layout>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:id="@+id/list_meujogo_master">

    <ImageView
        android:id="@+id/playergame_list_icon"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"/>

    <TextView
        android:id="@+id/playergame_list_title"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:text="Titulo"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/playergame_list_period"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Período"
        android:textSize="17dp" />


    <TextView
        android:id="@+id/playergame_list_role"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Posição no jogo"
        android:textSize="17dp" />

    <Button
        android:id="@+id/playergame_list_matchBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:text="Match"
        android:textAlignment="center" />

</RelativeLayout>
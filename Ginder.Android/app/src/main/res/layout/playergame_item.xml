<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:orientation="horizontal"
    android:id="@+id/list_meujogo_master">

    <ImageView
        android:id="@+id/playergame_list_icon"
        android:layout_width="120dp"
        android:layout_height="150dp"
        android:src="@drawable/ic_launcher_background"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">

        <TextView
            android:id="@+id/playergame_list_title"
            android:layout_width="match_parent"
            android:layout_height="90dp"
            android:text="Titulo"
            android:textSize="60dp" />

        <TextView
            android:id="@+id/playergame_list_period"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Período"
            android:textSize="20dp" />


        <TextView
            android:id="@+id/playergame_list_role"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Posição no jogo"
            android:textSize="20dp" />

    </LinearLayout>


</LinearLayout>